<h1>Dashboard</h1>
    
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s3"><a href="#previoustransactions">Sales</a></li>
        <li class="tab col s3"><a href="#purchase">Currently on sale</a></li>
      </ul>
    </div>
        <div id="previoustransactions" class="col s12">
            <h4>Sales</h4>
            <table>
            
                <thead>
                    
                    <tr>
                    
                        <th>Name</th>
                        <th>Price</th>
                        <th>Date</th>
                        <th>Buyer</th>
                    </tr>
                    </thead>
                <tbody>
                
                    <% @sales.each do |sale| %>
                    <tr>
                    
                        <th><%= sale.content.title %></th>
                        <th><%= number_to_currency(sale.amount/100) %></th>
                        <th><%= time_ago_in_words(sale.created_at) %> ago </th>
                        <th><%= sale.email_buyer %></th>
                    </tr>
                    <% end %>
                </tbody>
                
                
            </table>
      
        <h4>Purchases</h4>
            
                        <table>
            
                <thead>
                    
                    <tr>
                    
                        <th>Name</th>
                        <th>Price</th>
                        <th>Creation date</th>
                        <th>Seller</th>
                    </tr>
                    </thead>
                <tbody>
                
                    <% @purchased.each do |purchased| %>
                    <tr>
                    
                        <th><%= link_to purchased.content.title, pickup_path(purchased.guid) %></th>
                        <th><%= number_to_currency(purchased.amount / 100) %></th>
                        <th><%= time_ago_in_words(purchased.created_at) %> ago </th>
                        <th>purc</th>
                    </tr>
                    <% end %>
                </tbody>
                
                
            </table>
        
        </div>
        <div id="purchase" class="col s12">
            <table>
            
                <thead>
                    
                    <tr>
                    
                        <th>Name</th>
                        <th>Price</th>
                        <th>Creation date</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                <tbody>
                
                    <% @content.each do |content| %>
                    <tr>
                    
                        <th><%= link_to content.title, content_path(content) %></th>
                        <th><%= number_to_currency(content.price) %></th>
                        <th><%= time_ago_in_words(content.created_at) %> ago </th>
                        <th><%= link_to "Edit", edit_content_path(content) %> |
                            <%= link_to "Delete", content, method: :delete, data: {confirm: 'Are you sure you want to delete this content?'} %>
                            </th>
                    </tr>
                    <% end %>
                </tbody>
                
                
            </table>
      
      
      </div>
  </div>